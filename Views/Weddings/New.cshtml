@model WeddingForm
<div class="row">
    <div class="col s12 l5">
        <div class="row">
        <h3 id="fittext">Add Your Wedding</h3>
            <a class="btn pink-on-white hoverable" href="/logout"><i class="material-icons right">near_me</i>Log Out</a>
            <a class="btn pink-on-white hoverable ml-10" href="/Dashboard"><i class="material-icons right">home</i>Dashboard</a>
        </div>
        <div class="divider"></div>
        <p>Enter your wedding details below.</p>
        <p>Once you've added the wedding, others can RSVP and join the guestlist.</p>
        <form asp-controller="Weddings" asp-action="Create" method="POST">
            <span asp-validation-for="WedderOne" class="red-text"></span>
            <div class="input-field">
                <label asp-for="WedderOne">Wedder One</label>
                <input type="text" asp-for="WedderOne">
            </div>
            <span asp-validation-for="WedderTwo" class="red-text"></span>
            <div class="input-field">
                <label asp-for="WedderTwo">Wedder Two</label>
                <input type="text" asp-for="WedderTwo">
            </div>
            <span asp-validation-for="Address" class="red-text"></span>
            <div class="input-field">
                <label asp-for="Address">Address</label>
                <input type="text" asp-for="Address">
            </div>
            <span asp-validation-for="Date" class="red-text"></span>
            <div class="input-field">
                <input type="datetime-local" asp-for="Date">
            </div>
            <button type="submit" class="wedding-purple btn z-depth-2">Create
                <i class="material-icons right">add</i>
            </button>
        </form>
    </div>
    <div class="col hide-on-med-and-down l6 offset-l1">
        <div class="section vertical-banner card-panel z-depth-4" alt="Banner"></div>
    </div>
</div>